{
  "compilerOptions": {
    "jsx": "react",
    "module": "ES6",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "public/js",
    "lib": [
      "es7",
      "DOM"
    ],
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types/",
      "./src/@types"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ]
}